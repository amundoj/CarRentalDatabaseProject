<!DOCTYPE html>
<html>
<head>
  <title>Rent Vehicles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="../js/common.js"></script>
</head>
<body>
  <%- include('./partials/navbar.ejs', { user: user }) %>
  <div class="container-fluid mt-5">
    <h2 class="p-3 text-center">Vehicles for Rent - Colours</h2>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>
    <div class="list-group">
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-noroff">Id</span>
        <span class="col py-1 bg-noroff">Name</span>
        <span class="col py-1 bg-noroff">Options</span>
      </div>
      <% colours.forEach(function (colour) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light"><%= colour.id %></span>
          <span class="col py-1 bg-light"><%= colour.name %></span>
          <span class="col py-1 bg-light text-center">
            <form action="/colours/update/<%= colour.id %>" method="POST" class="d-inline">
              <input type="text" name="name" placeholder="Update name" required>
              <button type="submit" class="btn-sm btn-warning">Update colour</button>
            </form>
            <form action="/colours/delete/<%= colour.id %>" method="POST" class="d-inline">
              <button type="submit" class="btn-sm btn-danger">Delete colour</button>
            </form>
          </span>
        </div>
      <% }); %>
      <hr>
      <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center mt-2">
          <form action="/colours/add" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Colour Name:</label>
              <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <button class="btn btn-success" id="btn-add-colour">Add New Colour</button>
          </form>
        </div>
        <div class="col-4"></div>
      </div>
    </div>
  </div>
</body>
</html>
